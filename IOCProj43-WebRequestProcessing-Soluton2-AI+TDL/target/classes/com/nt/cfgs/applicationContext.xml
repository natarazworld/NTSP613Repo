<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context-4.0.xsd">

<!-- Dependent spring bean -->
   <bean id="handler"  class="com.nt.beans.RequestHandler" scope="prototype"/>
   <!-- Target spring bean  -->
   <bean id="container"  class="com.nt.beans.WebContainer"  scope="singleton"  lazy-init="true">
       <constructor-arg >
         <idref  bean="handler"/>
       </constructor-arg>
   </bean>
   
   

</beans>
